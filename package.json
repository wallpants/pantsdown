{
  "name": "pantsdown",
  "author": "wallpants",
  "type": "module",
  "version": "0.0.0",
  "license": "MIT",
  "description": "Markdown to 'GitHub HTML' parser",
  "repository": {
    "type": "git",
    "url": "git://github.com/wallpants/pantsdown.git"
  },
  "exports": {
    "./styles.css": {
      "types": "./src/css/styles.css.d.ts",
      "bun": "./src/css/styles.css",
      "import": "./src/css/styles.css"
    },
    ".": {
      "types": "./src/index.ts",
      "bun": "./src/index.ts",
      "import": "./src/index.ts"
    }
  },
  "release": {
    "branches": [
      "main"
    ]
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "body-max-line-length": [
        0
      ]
    }
  },
  "scripts": {
    "commit": "cz",
    "format": "prettier **/*.{md,ts,css,yml} -w",
    "lint": "tsc && eslint . --ext ts --report-unused-disable-directives --max-warnings 0",
    "docs:build": "bun run docs/build.ts"
  },
  "dependencies": {
    "github-slugger": "^2.0.0",
    "highlight.js": "^11.9.0"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^18.6.0",
    "@commitlint/cz-commitlint": "^18.6.0",
    "@happy-dom/global-registrator": "^13.3.8",
    "@typescript-eslint/eslint-plugin": "^6.19.1",
    "@typescript-eslint/parser": "^6.21.0",
    "bun-types": "latest",
    "commitizen": "^4.3.0",
    "commitlint": "^18.6.0",
    "eslint": "^8.56.0",
    "prettier": "^3.2.5",
    "prettier-plugin-organize-imports": "^3.2.4",
    "semantic-release": "^23.0.2",
    "typescript": "5.3.3"
  }
}
