{
  "name": "pantsdown",
  "version": "0.0.0",
  "author": "wallpants",
  "description": "Markdown to 'GitHub HTML' parser",
  "license": "MIT",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git://github.com/wallpants/pantsdown.git"
  },
  "exports": {
    "./styles.css": {
      "types": "./src/css/styles.css.d.ts",
      "bun": "./src/css/styles.css",
      "import": "./src/css/styles.css"
    },
    ".": {
      "types": "./src/index.ts",
      "bun": "./src/index.ts",
      "import": "./src/index.ts"
    }
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "scripts": {
    "format": "prettier **.{md,ts,css} -w",
    "lint": "tsc && eslint . --ext ts --report-unused-disable-directives --max-warnings 0",
    "commit": "cz",
    "docs:build": "bun run docs/build.ts"
  },
  "release": {
    "branches": [
      "main"
    ]
  },
  "dependencies": {
    "github-slugger": "^2.0.0",
    "highlight.js": "^11.9.0"
  },
  "devDependencies": {
    "@happy-dom/global-registrator": "^12.10.3",
    "@typescript-eslint/eslint-plugin": "^6.7.3",
    "@typescript-eslint/parser": "^6.7.3",
    "bun-types": "latest",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.50.0",
    "prettier": "^3.0.2",
    "prettier-plugin-organize-imports": "^3.2.3",
    "semantic-release": "^22.0.5",
    "typescript": "5.2.2"
  }
}
